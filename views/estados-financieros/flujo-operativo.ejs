<!-- Flujo Operativo -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-cash-stack me-2"></i> Flujo Operativo
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <!-- INGRESOS -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">INGRESOS</td>
                    </tr>
                    <tr>
                        <td style="width: 70%;">Ventas</td>
                        <td style="width: 30%;">
                            <input type="number" step="0.01" class="form-control text-end" name="ventas">
                        </td>
                    </tr>
                    <tr>
                        <td>Ventas Exportación</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="ventas_exportacion">
                        </td>
                    </tr>
                    <tr>
                        <td>Cartera</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="cartera">
                        </td>
                    </tr>
                    <tr>
                        <td>Transportes (Ingreso)</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="transportes_ing">
                        </td>
                    </tr>
                    <tr>
                        <td>Otros Ingresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="otros_ingresos">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Total Ingresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="fo_total_ingresos" readonly>
                        </td>
                    </tr>
                    
                    <!-- EGRESOS -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">EGRESOS</td>
                    </tr>
                    <tr>
                        <td>Gastos Administrativos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gastos_administrativos">
                        </td>
                    </tr>
                    <tr>
                        <td>Gastos Comerciales</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gastos_comerciales">
                        </td>
                    </tr>
                    <tr>
                        <td>Gastos Producción</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gastos_produccion">
                        </td>
                    </tr>
                    <tr>
                        <td>Envíos Cuenta Corporativa</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="envios_cta_corp">
                        </td>
                    </tr>
                    <tr>
                        <td>Impuestos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="impuestos">
                        </td>
                    </tr>
                    <tr>
                        <td>Transportes (Egreso)</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="transportes_egr">
                        </td>
                    </tr>
                    <tr>
                        <td>Cuentas por Pagar</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="cuentas_por_pagar">
                        </td>
                    </tr>
                    <tr>
                        <td>Inversiones</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="inversiones">
                        </td>
                    </tr>
                    <tr>
                        <td>Otros Gastos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="otros_gastos">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Total Egresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="fo_total_egresos" readonly>
                        </td>
                    </tr>
                    
                    <!-- SALDOS -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">SALDOS</td>
                    </tr>
                    <tr>
                        <td>Saldo Anterior</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="saldo_anterior">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Ingresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="fo_ingresos_calculado" readonly>
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Egresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="fo_egresos_calculado" readonly>
                        </td>
                    </tr>
                    <tr class="table-success">
                        <td class="fw-bold">Saldo Actual</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="fo_saldo_actual" readonly>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
