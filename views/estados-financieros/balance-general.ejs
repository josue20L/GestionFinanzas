<!-- Balance General -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-bank me-2"></i> Balance General
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <!-- ACTIVO -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">ACTIVO</td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold" style="width: 70%;">Activo Corriente</td>
                        <td style="width: 30%;">
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="activo_corriente" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Disponible</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="disponible">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Exigible</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="exigible">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Realizable</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="realizable">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Activo No Corriente</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="activo_no_corriente" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Activo Fijo Tangible</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="activo_fijo_tangible">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Activo Diferido</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="activo_diferido">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Otros Activos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="otros_activos">
                        </td>
                    </tr>
                    <tr class="table-success">
                        <td class="fw-bold">Total Activo</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="total_activo" readonly>
                        </td>
                    </tr>
                    
                    <!-- PASIVO -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">PASIVO</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Pasivo Corriente</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="pasivo_corriente">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Pasivo No Corriente</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="pasivo_no_corriente" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Previsi√≥n Beneficios Sociales</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="prevision_beneficios_sociales">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Obligaciones Bancarias</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="obligaciones_bancarias">
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">Intereses por Pagar</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="intereses_pagar">
