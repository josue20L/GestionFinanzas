                    </tr>
                    <tr>
                        <td class="ps-4">Procesos Legales</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="procesos_legales">
                        </td>
                    </tr>
                    
                    <!-- PATRIMONIO -->
                    <tr class="table-secondary">
                        <td colspan="2" class="fw-bold text-center">PATRIMONIO</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Patrimonio</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="patrimonio">
                        </td>
                    </tr>
                    <tr class="table-success">
                        <td class="fw-bold">Total Pasivo y Patrimonio</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="total_pasivo_patrimonio" readonly>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
