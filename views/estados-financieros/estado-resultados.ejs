<!-- Estado de Resultados -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-graph-up me-2"></i> Estado de Resultados
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="fw-bold" style="width: 70%;">Ventas Netas</td>
                        <td style="width: 30%;">
                            <input type="number" step="0.01" class="form-control text-end" name="ventas_netas">
                        </td>
                    </tr>
                    <tr>
                        <td>Costo de Ventas</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="costo_ventas">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Utilidad en Ventas</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="utilidad_ventas" readonly>
                        </td>
                    </tr>
                    <tr class="table-danger">
                        <td colspan="2" class="fw-bold text-center">Gastos Operativos</td>
                    </tr>
                    <tr>
                        <td>Gasto Administrativo</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gasto_administrativo">
                        </td>
                    </tr>
                    <tr>
                        <td>Gasto Comercialización</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gasto_comercializacion">
                        </td>
                    </tr>
                    <tr>
                        <td>Gasto SIG</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gasto_sig">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Gasto Operativo</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="gasto_operativo" readonly>
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">EBIT</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="ebit" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td>Gasto Tributario</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gasto_tributario">
                        </td>
                    </tr>
                    <tr>
                        <td>Gasto Financiero</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="gasto_financiero">
                        </td>
                    </tr>
                    <tr class="table-primary">
                        <td class="fw-bold">Utilidad Después de Impuestos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="utilidad_despues_impuestos" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td>Otros Ingresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="otros_ingresos">
                        </td>
                    </tr>
                    <tr>
                        <td>Otros Egresos</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end" name="otros_egresos">
                        </td>
                    </tr>
                    <tr class="table-success">
                        <td class="fw-bold">Utilidad Neta</td>
                        <td>
                            <input type="number" step="0.01" class="form-control text-end fw-bold" name="utilidad_neta" readonly>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
