<!-- Overlay para móviles -->
<div id="sidebarOverlay" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 z-10" style="display: none;"></div>

<style>
    /* Estilos para el tema oscuro */
    [data-bs-theme="dark"] {
        --bs-body-bg: #1a1a1a;
        --bs-body-color: #e0e0e0;
        --bs-border-color: #444;
    }

    /* Estilos para el sidebar */
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        z-index: 1040;
        box-shadow: 2px 0 10px rgba(0,0,0,0.3);
        background-color: #212529 !important;
    }
    
    /* Efecto hover en los enlaces */
    .nav-link {
        transition: all 0.2s;
        color: #e0e0e0 !important;
    }
    
    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1) !important;
    }
    
    .nav-link.active {
        background-color: #0d6efd !important;
        color: white !important;
    }
    
    /* Estilos para móviles */
    @media (max-width: 767.98px) {
        .sidebar {
            transform: translateX(-100%);
            width: 280px !important;
        }
        
        .sidebar.show {
            transform: translateX(0);
            box-shadow: 2px 0 15px rgba(0,0,0,0.5);
        }
        
        body.sidebar-open {
            overflow: hidden;
        }
        
        #sidebarOverlay {
            display: block !important;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
            z-index: 1039;
        }
        
        #sidebarOverlay.show {
            opacity: 1;
            visibility: visible;
        }
    }

    /* Ajustes para el contenido principal */
    .main-content {
        transition: margin-left 0.3s;
        margin-left: 0;
        width: 100%;
    }
    
    @media (min-width: 768px) {
        .main-content {
            margin-left: 280px;
            width: calc(100% - 280px);
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sidebar = document.getElementById('sidebar');
        const sidebarCollapse = document.getElementById('sidebarCollapse');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const body = document.body;
        const html = document.documentElement;

        // Función para alternar el menú
        function toggleSidebar() {
            const isMobile = window.innerWidth < 768;
            
            if (isMobile) {
                sidebar.classList.toggle('show');
                sidebarOverlay.classList.toggle('show');
                body.classList.toggle('sidebar-open');
                
                // Bloquear scroll cuando el menú está abierto
                body.style.overflow = body.classList.contains('sidebar-open') ? 'hidden' : '';
            }
        }

        // Alternar tema oscuro/claro
        function toggleTheme() {
            const isDark = html.getAttribute('data-bs-theme') === 'dark';
            const newTheme = isDark ? 'light' : 'dark';
            html.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            // Actualizar botón
            const themeToggle = document.getElementById('themeToggle');
            const themeText = document.getElementById('themeText');
            const icon = themeToggle.querySelector('i');
            
            if (newTheme === 'dark') {
                icon.classList.remove('bi-moon-stars');
                icon.classList.add('bi-sun');
                themeText.textContent = 'Tema Claro';
            } else {
                icon.classList.remove('bi-sun');
                icon.classList.add('bi-moon-stars');
                themeText.textContent = 'Tema Oscuro';
            }
        }

        // Cargar tema guardado
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-bs-theme', savedTheme);
        
        // Actualizar botón según el tema guardado
        const themeToggle = document.getElementById('themeToggle');
        const themeText = document.getElementById('themeText');
        const icon = themeToggle.querySelector('i');
        
        if (savedTheme === 'dark') {
            icon.classList.remove('bi-moon-stars');
            icon.classList.add('bi-sun');
            themeText.textContent = 'Tema Claro';
        }

        // Event listeners
        sidebarCollapse?.addEventListener('click', function(e) {
            e.stopPropagation();
            toggleSidebar();
        });

        sidebarOverlay?.addEventListener('click', toggleSidebar);
        
        // Event listener para el botón de tema
        themeToggle?.addEventListener('click', toggleTheme);

        // Event listeners para navegación del sidebar con validación de cambios
        document.querySelectorAll('.sidebar-nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetUrl = this.getAttribute('data-href');
                
                // Verificar si hay cambios sin guardar (solo en carga mensual)
                if (window.location.pathname === '/carga-mensual' && window.cargaMensualManager) {
                    if (window.cargaMensualManager.hayCambiosSinGuardarEnFormularios()) {
                        // Mostrar modal de confirmación
                        const modal = new bootstrap.Modal(document.getElementById('modalAlertaCambios'));
                        const confirmBtn = document.querySelector('#modalAlertaCambios .btn-confirmar');
                        const cancelBtn = document.querySelector('#modalAlertaCambios .btn-cancelar');
                        
                        // Configurar botones del modal
                        confirmBtn.onclick = function() {
                            modal.hide();
                            window.location.href = targetUrl;
                        };
                        
                        cancelBtn.onclick = function() {
                            modal.hide();
                        };
                        
                        // Configurar botón de salir sin guardar
                        const salirSinGuardarBtn = document.querySelector('#modalAlertaCambios .btn-outline-secondary');
                        if (salirSinGuardarBtn) {
                            salirSinGuardarBtn.onclick = function() {
                                modal.hide();
                                if (window.modalCambios) {
                                    window.modalCambios.salirSinGuardar(targetUrl);
                                } else {
                                    window.location.href = targetUrl;
                                }
                            };
                        }
                        
                        modal.show();
                        return;
                    }
                }
                
                // Si no hay cambios, navegar normalmente
                window.location.href = targetUrl;
            });
        });

        // Resaltar la sección actual en el sidebar
        function highlightCurrentSection() {
            const currentPath = window.location.pathname;
            
            // Quitar clase activa de todos los enlaces
            document.querySelectorAll('.sidebar-nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // Agregar clase activa al enlace correspondiente
            const activeLink = document.querySelector(`.sidebar-nav-link[data-href="${currentPath}"]`);
            if (activeLink) {
                activeLink.classList.add('active');
            }
        }

        // Llamar a la función al cargar la página
        highlightCurrentSection();

        // También llamar cuando cambia la URL (para navegación con botón atrás/adelante)
        window.addEventListener('popstate', highlightCurrentSection);

        // Cerrar menú al hacer clic en un enlace (móviles)
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth < 768) {
                    toggleSidebar();
                }
            });
        });

        // Manejar cambios de tamaño de ventana
        function handleResize() {
            if (window.innerWidth >= 768) {
                sidebar.classList.remove('show');
                sidebarOverlay.classList.remove('show');
                body.classList.remove('sidebar-open');
                body.style.overflow = '';
            }
        }

        let resizeTimer;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(handleResize, 250);
        });

        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', function(e) {
            if (window.innerWidth < 768 && 
                !sidebar.contains(e.target) && 
                !sidebarCollapse.contains(e.target) && 
                sidebar.classList.contains('show')) {
                toggleSidebar();
            }
        });

        // Inicializar tooltips solo en desktop
        if (window.innerWidth >= 768) {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
        }
    });
</script>